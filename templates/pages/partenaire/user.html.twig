{% extends 'base.html.twig' %}

{% block title %}Port-training{% endblock %}

{% block body %}
{% if user is null %}
<a href="{{ path('partenaire.new.user',{id : id}) }}" class="btn btn-primary m-4">Création un responable</a>
{% endif %}
{% if user is not null %}
<div class="container mt-4">
<h1>Responsable du partenaire {{ partenaire.name }}</h1>


  {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %}




<table class="table table-hover mt-4">
  <thead>
    <tr>
      <th scope="col">Numéro</th>
      <th scope="col">Nom</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>

    </tr>
  </thead>
  <tbody>
  
    <tr class="table-primary">
      <th scope="row">{{user.id}}</th>
      <td> {{user.fullName}}</td>
      <td> {{user.email}}</td>
      <td> {{user.roles[0]}}</td>
      
      {# <td>
         <a href="{{ path('user.edit',{id : user.id}) }}" class = "btn btn-info">Modifier</a>
      </td>
       <td>
      <a href="{{path('user.edit.password',{id : user.id})}}" class = "btn btn-warning">modifier</a>
      </td>
       <td>
      <a href="{{path('user.delete',{id : user.id})}}" class = "btn btn-warning">suppression</a>
      </td> #}
    </tr>
  </tbody>
</table>
{% else %}
<br>
<div class="badge bg-warning m-4">
  <h4>Aucun responsable associé à ce partenaire</h4>
</div>

{% endif %}
</div>
{% endblock %}
